.header
	width 100%
	position fixed
	z-index 20

.icon-hamburguer-content
	display none
	
	+below(950px)
		width 70%
		text-align right
		display inline-block
		vertical-align middle

.icon-hamburguer
	display none
	
	+below(950px)
		position absolute
		cursor pointer
		width 30px
		height 30px
		z-index 55
		right 20px
		top 30px
		display block
		
		&:hover
			animation zoom 300ms ease-in

#hamburguer
	display none

#hamburguer:checked + .navigation-content
	display block
	width 100%
	min-height 100%
	position fixed
	background alpha(#fff, 0.8)
	top 0
	left 0
	text-align center

.container
	width 100%
	max-width 1024px
	margin 0 auto
	font-size 0
	
	+below(1024px)
		padding 0 15px
		
	.logo
		width 30%
		display inline-block
		vertical-align middle
		padding 20px 0

	.navigation-content
		width 70%
		display inline-block
		vertical-align middle
		text-align right

		+below(950px)
			display none
	
	.navigation-list
		+below(950px)
			position absolute
			top 50%
			left 50%
			transform translate(-50%, -50%)
		
	.navigation-item
		display inline-block
		vertical-align middle
		margin-right 20px

		+below(950px)
			display block

		.navigation-link
			font-size 15px
			font-family $f-primary
			color $c-white
			text-transform uppercase
			text-decoration none
			font-weight 400
			
			+below(1025px)
				margin-right 10px
				
			+below(950px)
				font-size 23px
				line-height 30px
				color $c-primary
				font-weight 300

		.navigation-button
			button($c-primary, $c-white, 30px, 15px, 18px)
.lines
	background-color $c-primary
	width 100%
	height 3px
	margin 5px 0
	transition all 450ms ease-in
	display block

.close-hamburguer
	.lines
		cursor pointer

	.line-top
		transform translateY(200%) rotate(45deg)

	.line-mid
		opacity 0

	.line-bottom
		transform translateY(-320%) rotate(135deg)