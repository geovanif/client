  .input
    position relative
    padding 0
    margin 5px
    border none
    overflow visible

  .input input
    box-sizing border-box
    width 100%
    padding 12px 10px 8px
    border none
    border-radius 0
    box-shadow none
    font-family $f-primary
    border-bottom 1px solid $c-white
    font-size 15px
    font-weight 100
    outline none
    cursor text
    background transparent
    color $c-white

  .input hr
    content ''
    display block
    position absolute
    bottom 0
    left 0
    margin 0
    padding 0
    width 100%
    height 2px
    border none
    background: $c-white
    font-size 1px
    will-change transform, visibility
    transition all 200ms ease-out
    transform scaleX(0)
    visibility hidden
    z-index 10

  .input input:focus ~ hr
    transform scaleX(1)
    visibility visible

  .input .label
    position absolute
    top 10px
    left 10px
    font-size 15px
    color $c-white
    font-family $f-primary
    transform-origin 0 -150%
    transition transform 300ms ease
    pointer-events none
    font-weight 100

  .input input:focus ~ .label,
  .input input:valid ~ .label
    transform scale(0.6)