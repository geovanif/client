button($color, $background, $width, $height, $font-size)
	background $background
	color $color
	font-size $font-size
	font-weight 100
	border-radius 25px
	text-decoration none
	padding $height $width
	font-family $f-primary
	border 1px solid $background
	cursor pointer

	&:hover
		background transparent
		border 1px solid $background
		color $background